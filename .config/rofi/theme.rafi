* {
    font:   "Cantarell 12";
    margin:     0px;
    padding:    0px;
    spacing:    0px;

    background-color: transparent;
    text-color: #eaeaea;
}

window {
    y-offset: 32;
    location:           north;
    padding: 3px;
    width:              calc(100% - 16px);
    background-color:   #282c34;
    border-radius: 0 0 7px 7px;
    children:           [ mainbox, message ];
}

mainbox {
    orientation:    horizontal;
    children:       [ inputbar,listview ];
}

inputbar {
    width:      25%;
    padding:    1px 8px;
    spacing:    8px;
    children:   [ prompt, entry ];
}

prompt, entry, element-text, element-icon {
    vertical-align: 0.5;
}

prompt {
    text-color: #eaeaea;
}

listview {
    layout: horizontal;
}

element {
    padding:    1px 8px;
    spacing:    4px;
}

element normal urgent {
    text-color: #bbc2cf;
}

element normal active {
    text-color: #c397d8;
}

element selected {
    text-color: #282c34;
}

element selected normal {
    background-color:   #c678dd;
}

element selected urgent {
    background-color:   #d54e5c;
}

element selected active {
    background-color:   #c678dd;
}

element-icon {
    size:   0.75em;
}

element-text {
    text-color: inherit;
}
